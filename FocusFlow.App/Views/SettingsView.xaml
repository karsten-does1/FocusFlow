<UserControl
    x:Class="FocusFlow.App.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FocusFlow.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:FocusFlow.Core.Domain.Enums;assembly=FocusFlow.Core"
    xmlns:local="clr-namespace:FocusFlow.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FocusFlow.App.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Settings" />
        </StackPanel>

        <!--  Main Content  -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>

                <!--  Email Accounts  -->
                <Border
                    Margin="0,0,0,20"
                    Padding="15"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="5">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Email Accounts" />
                            <Button
                                Margin="20,0,10,0"
                                Padding="10,5"
                                Background="#4285F4"
                                Command="{Binding ConnectGmailCommand}"
                                Content="ðŸ“§ Connect Gmail"
                                Foreground="White" />
                            <Button
                                Padding="10,5"
                                Background="#0078D4"
                                Command="{Binding ConnectOutlookCommand}"
                                Content="ðŸ“§ Connect Outlook"
                                Foreground="White" />
                        </StackPanel>

                        <TextBlock
                            Margin="0,10,0,0"
                            Foreground="Gray"
                            Text="Loading accounts..."
                            Visibility="{Binding IsLoadingAccounts, Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding EmailAccounts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,5"
                                        Padding="15"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="Bold"
                                                    Text="{Binding DisplayName}" />
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    FontSize="12"
                                                    Foreground="Gray"
                                                    Text="{Binding EmailAddress}" />
                                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="Provider: " />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding Provider}" />
                                                    <TextBlock
                                                        Margin="15,0,0,0"
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="Connected: " />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding ConnectedAtUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                                                </StackPanel>
                                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="Token expires: " />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding AccessTokenExpiresUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Button
                                                    Margin="5,0"
                                                    Padding="8,4"
                                                    Command="{Binding DataContext.ShowEditAccountFormCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Content="Edit" />
                                                <Button
                                                    Margin="5,0"
                                                    Padding="8,4"
                                                    Background="LightCoral"
                                                    Command="{Binding DataContext.DeleteAccountAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Content="Delete" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Foreground="Gray"
                            Text="No email accounts connected"
                            Visibility="{Binding EmailAccounts.Count, Converter={StaticResource ZeroToVisibilityConverter}}" />
                    </StackPanel>
                </Border>

                <!--  Daily Briefing look-ahead settings  -->
                <Border
                    Margin="0,0,0,20"
                    Padding="15"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="5">

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="18"
                            FontWeight="Bold"
                            Text="Daily Briefing" />

                        <TextBlock
                            Margin="0,0,0,15"
                            Foreground="Gray"
                            Text="Configure how far the dashboard looks ahead for tasks, reminders and emails."
                            TextWrapping="Wrap" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Tasks window" />
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="160"
                                SelectedValue="{Binding BriefingTasksHours}"
                                SelectedValuePath="Tag">
                                <ComboBoxItem Content="24 hours" Tag="24" />
                                <ComboBoxItem Content="48 hours" Tag="48" />
                                <ComboBoxItem Content="72 hours" Tag="72" />
                                <ComboBoxItem Content="7 days" Tag="168" />
                            </ComboBox>

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,10,0,0"
                                VerticalAlignment="Center"
                                Text="Reminders window" />
                            <ComboBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="160"
                                Margin="0,10,0,0"
                                SelectedValue="{Binding BriefingRemindersHours}"
                                SelectedValuePath="Tag">
                                <ComboBoxItem Content="1 hour" Tag="1" />
                                <ComboBoxItem Content="6 hours" Tag="6" />
                                <ComboBoxItem Content="12 hours" Tag="12" />
                                <ComboBoxItem Content="24 hours" Tag="24" />
                                <ComboBoxItem Content="48 hours" Tag="48" />
                            </ComboBox>

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,10,0,0"
                                VerticalAlignment="Center"
                                Text="Emails lookback" />
                            <ComboBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="160"
                                Margin="0,10,0,0"
                                SelectedValue="{Binding BriefingEmailsDays}"
                                SelectedValuePath="Tag">
                                <ComboBoxItem Content="1 day" Tag="1" />
                                <ComboBoxItem Content="2 days" Tag="2" />
                                <ComboBoxItem Content="7 days" Tag="7" />
                                <ComboBoxItem Content="14 days" Tag="14" />
                            </ComboBox>
                        </Grid>

                        <StackPanel
                            Margin="0,20,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Margin="0,0,10,0"
                                Padding="12,6"
                                Command="{Binding LoadBriefingSettingsCommand}"
                                Content="Reload" />
                            <Button
                                Padding="12,6"
                                Background="LightGreen"
                                Command="{Binding SaveBriefingSettingsCommand}"
                                Content="Save" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Notifications  -->
                <Border
                    Margin="0,0,0,20"
                    Padding="15"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="5">

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="18"
                            FontWeight="Bold"
                            Text="Notifications" />

                        <TextBlock
                            Margin="0,0,0,15"
                            Foreground="Gray"
                            Text="Control when FocusFlow can interrupt you."
                            TextWrapping="Wrap" />

                        <CheckBox
                            Margin="0,0,0,12"
                            Content="Enable notifications"
                            IsChecked="{Binding NotificationsEnabled}"
                            ToolTip="Turns all FocusFlow notifications on or off (reminders and daily briefing)." />

                        <StackPanel IsEnabled="{Binding NotificationsEnabled}">

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Check interval (seconds)"
                                    TextWrapping="Wrap"
                                    ToolTip="How often FocusFlow checks for upcoming reminders. Lower values mean faster notifications but slightly more background activity." />
                                <ComboBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Width="160"
                                    ItemsSource="{Binding TickOptionsSeconds}"
                                    SelectedItem="{Binding NotificationTickSeconds}"
                                    ToolTip="Choose how frequently FocusFlow checks in the background." />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,10,0,0"
                                    VerticalAlignment="Center"
                                    Text="Reminder heads-up (minutes)"
                                    TextWrapping="Wrap"
                                    ToolTip="How many minutes before a reminder FocusFlow should notify you." />
                                <ComboBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="160"
                                    Margin="0,10,0,0"
                                    ItemsSource="{Binding UpcomingWindowOptionsMinutes}"
                                    SelectedItem="{Binding ReminderUpcomingWindowMinutes}"
                                    ToolTip="A larger value warns you earlier; a smaller value warns closer to the reminder time." />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,10,0,0"
                                    VerticalAlignment="Center"
                                    Text="Daily briefing time"
                                    TextWrapping="Wrap"
                                    ToolTip="Time of day when FocusFlow automatically shows your daily overview (no manual refresh needed)." />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="160"
                                    Margin="0,10,0,0"
                                    Text="{Binding BriefingTimeLocal, UpdateSourceTrigger=PropertyChanged}"
                                    ToolTip="Enter a time in HH:mm (e.g. 09:00). FocusFlow will show the daily briefing once per day at this time." />
                            </Grid>

                            <CheckBox
                                Margin="0,0,0,15"
                                Content="Show daily briefing notification"
                                IsChecked="{Binding BriefingNotificationsEnabled}"
                                ToolTip="Automatically shows a daily overview of emails, tasks and reminders at the selected time." />

                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button
                                    Margin="0,0,10,0"
                                    Padding="12,6"
                                    Command="{Binding LoadNotificationSettingsCommand}"
                                    Content="Reload"
                                    ToolTip="Reload the last saved notification settings." />
                                <Button
                                    Padding="12,6"
                                    Background="LightGreen"
                                    Command="{Binding SaveNotificationSettingsCommand}"
                                    Content="Save"
                                    ToolTip="Save notification settings. Changes take effect automatically." />
                            </StackPanel>

                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Error Message  -->
                <TextBlock
                    Foreground="Red"
                    Text="{Binding ErrorMessage}"
                    TextWrapping="Wrap"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}" />

            </StackPanel>
        </ScrollViewer>

        <!--  Account Form Overlay  -->
        <Border
            Grid.RowSpan="2"
            Width="500"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="10"
            Visibility="{Binding IsAccountFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="18"
                    FontWeight="Bold">
                    <TextBlock.Text>
                        <Binding Path="SelectedAccount">
                            <Binding.Converter>
                                <conv:NullToTitleConverter />
                            </Binding.Converter>
                        </Binding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Text="Display Name *" />
                <TextBox Margin="0,0,0,15" Text="{Binding AccountDisplayName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Email Address *" />
                <TextBox Margin="0,0,0,15" Text="{Binding AccountEmailAddress, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Provider *" />
                <ComboBox
                    Margin="0,0,0,15"
                    ItemsSource="{Binding AvailableProviders}"
                    SelectedItem="{Binding SelectedProvider}" />

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Margin="5,0"
                        Padding="15,5"
                        Command="{Binding CancelAccountFormCommand}"
                        Content="Cancel" />
                    <Button
                        Margin="5,0"
                        Padding="15,5"
                        Background="LightGreen"
                        Command="{Binding SaveAccountCommand}"
                        Content="Save" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
