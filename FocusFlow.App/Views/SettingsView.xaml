<UserControl
    x:Class="FocusFlow.App.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FocusFlow.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FocusFlow.App.ViewModels"
    xmlns:enums="clr-namespace:FocusFlow.Core.Domain.Enums;assembly=FocusFlow.Core"
    xmlns:conv="clr-namespace:FocusFlow.App.Converters"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Settings"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- Email Accounts Section -->
                <Border
                    Margin="0,0,0,20"
                    Padding="15"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="5">
                    <StackPanel>
                        <StackPanel
                            Margin="0,0,0,15"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Email Accounts"/>
                            <Button
                                Margin="20,0,10,0"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                Background="#4285F4"
                                Foreground="White"
                                Command="{Binding ConnectGmailCommand}"
                                Content="ðŸ“§ Connect Gmail"/>
                            <Button
                                Margin="0,0,0,0"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                Background="#0078D4"
                                Foreground="White"
                                Command="{Binding ConnectOutlookCommand}"
                                Content="ðŸ“§ Connect Outlook"/>
                        </StackPanel>

                        <!-- Loading Indicator -->
                        <TextBlock
                            Margin="0,10,0,0"
                            Foreground="Gray"
                            Text="Loading accounts..."
                            Visibility="{Binding IsLoadingAccounts, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Accounts List -->
                        <ItemsControl
                            Margin="0,10,0,0"
                            ItemsSource="{Binding EmailAccounts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,5"
                                        Padding="15"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock
                                                    FontWeight="Bold"
                                                    FontSize="14"
                                                    Text="{Binding DisplayName}"/>
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    FontSize="12"
                                                    Foreground="Gray"
                                                    Text="{Binding EmailAddress}"/>
                                                <StackPanel
                                                    Margin="0,5,0,0"
                                                    Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="Provider: "/>
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding Provider}"/>
                                                    <TextBlock
                                                        Margin="15,0,0,0"
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="Connected: "/>
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding ConnectedAtUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                                </StackPanel>
                                                <StackPanel
                                                    Margin="0,5,0,0"
                                                    Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="Token expires: "/>
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding AccessTokenExpiresUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Column="1"
                                                Orientation="Horizontal">
                                                <Button
                                                    Margin="5,0"
                                                    Padding="8,4"
                                                    Command="{Binding DataContext.ShowEditAccountFormCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Content="Edit"/>
                                                <Button
                                                    Margin="5,0"
                                                    Padding="8,4"
                                                    Background="LightCoral"
                                                    Command="{Binding DataContext.DeleteAccountAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Content="Delete"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <TextBlock
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Foreground="Gray"
                            Text="No email accounts connected"
                            Visibility="{Binding EmailAccounts.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <TextBlock
                    Margin="0,10,0,0"
                    Foreground="Red"
                    Text="{Binding ErrorMessage}"
                    TextWrapping="Wrap"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Account Form (Overlay) -->
        <Border
            Grid.RowSpan="2"
            Width="500"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="10"
            Visibility="{Binding IsAccountFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="18"
                    FontWeight="Bold">
                    <TextBlock.Text>
                        <Binding Path="SelectedAccount">
                            <Binding.Converter>
                                <conv:NullToTitleConverter/>
                            </Binding.Converter>
                        </Binding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Margin="0,0,0,5"
                        Text="Display Name *"/>
                <TextBox
                    Margin="0,0,0,15"
                    Text="{Binding AccountDisplayName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Margin="0,0,0,5"
                        Text="Email Address *"/>
                <TextBox
                    Margin="0,0,0,15"
                    Text="{Binding AccountEmailAddress, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Margin="0,0,0,5"
                        Text="Provider *"/>
                <ComboBox
                    Margin="0,0,0,15"
                    ItemsSource="{Binding AvailableProviders}"
                    SelectedItem="{Binding SelectedProvider}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal">
                    <Button
                        Margin="5,0"
                        Padding="15,5"
                        Command="{Binding CancelAccountFormCommand}"
                        Content="Cancel"/>
                    <Button
                        Margin="5,0"
                        Padding="15,5"
                        Background="LightGreen"
                        Command="{Binding SaveAccountCommand}"
                        Content="Save"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

