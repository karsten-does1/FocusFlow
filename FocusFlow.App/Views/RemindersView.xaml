<UserControl
    x:Class="FocusFlow.App.Views.RemindersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FocusFlow.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FocusFlow.App.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Reminders" />
            <Button
                Margin="20,0,0,0"
                Padding="10,5"
                HorizontalAlignment="Left"
                Command="{Binding ShowNewReminderFormCommand}"
                Content="+ New Reminder" />
        </StackPanel>

        <!--  Filter  -->
        <CheckBox
            Grid.Row="1"
            Margin="0,0,0,20"
            Content="Show only upcoming (next 30 days)"
            IsChecked="{Binding ShowOnlyUpcoming}" />

        <!--  Error Message  -->
        <TextBlock
            Grid.Row="2"
            Margin="0,0,0,10"
            Foreground="Red"
            Text="{Binding ErrorMessage}"
            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}" />

        <!--  Loading Indicator  -->
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Loading..."
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!--  Reminders List  -->
        <ListBox
            Grid.Row="2"
            ItemsSource="{Binding Reminders}"
            Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="0,5"
                        Padding="10"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontWeight="Bold"
                                    Text="{Binding Title}"
                                    TextDecorations="{Binding Fired, Converter={StaticResource BooleanToTextDecorationConverter}}" />

                                <TextBlock Margin="0,5,0,0">
                                    <Run FontWeight="Bold" Text="Due:" />
                                    <Run Foreground="DarkBlue" Text="{Binding FireAtUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                                </TextBlock>

                                <TextBlock>
                                    <Run FontWeight="Bold" Text="Status:" />
                                    <Run Text="{Binding Fired, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Fired|Pending'}" />
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button
                                    Margin="5,0"
                                    Padding="10,5"
                                    Command="{Binding DataContext.MarkFiredCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Mark Fired"
                                    Visibility="{Binding Fired, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />

                                <Button
                                    Margin="5,0"
                                    Padding="10,5"
                                    Background="LightCoral"
                                    Command="{Binding DataContext.DeleteReminderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Delete" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--  Reminder Form (Overlay)  -->
        <Border
            Grid.Row="2"
            Width="400"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="10"
            Visibility="{Binding IsReminderFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="New Reminder" />

                <TextBlock Margin="0,0,0,5" Text="Title *" />
                <TextBox Margin="0,0,0,15" Text="{Binding ReminderTitle, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Margin="0,0,0,5" Text="Fire Date &amp; Time" />
                <DatePicker Margin="0,0,0,15" SelectedDate="{Binding ReminderFireDate}" />

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Margin="5,0"
                        Padding="15,5"
                        Command="{Binding CancelReminderFormCommand}"
                        Content="Cancel" />
                    <Button
                        Margin="5,0"
                        Padding="15,5"
                        Background="LightGreen"
                        Command="{Binding SaveReminderCommand}"
                        Content="Save" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>