<UserControl
    x:Class="FocusFlow.App.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="Bold"
            Text="Dashboard" />

        <!--  Loading Indicator  -->
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Loading..."
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!--  Error Message  -->
        <Border
            Grid.Row="1"
            Margin="0,0,0,10"
            Padding="10"
            Background="#22FF0000"
            BorderBrush="IndianRed"
            BorderThickness="1"
            CornerRadius="6"
            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock
                Foreground="DarkRed"
                Text="{Binding ErrorMessage}"
                TextWrapping="Wrap" />
        </Border>

        <!--  Dashboard Content  -->
        <ScrollViewer Grid.Row="1" Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <StackPanel>

                <!--  Statistics Cards  -->
                <UniformGrid Margin="0,0,0,20" Columns="3">

                    <!--  Tasks Card  -->
                    <Border
                        Margin="5"
                        Padding="15"
                        Background="#E3F2FD"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                FontSize="14"
                                Foreground="Gray"
                                Text="ðŸ“‹ Tasks" />
                            <TextBlock
                                FontSize="32"
                                FontWeight="Bold"
                                Text="{Binding TotalTasks}" />
                            <TextBlock>
                                <Run FontWeight="Bold" Text="{Binding ActiveTasks}" />
                                <Run Text=" active, " />
                                <Run FontWeight="Bold" Text="{Binding CompletedTasks}" />
                                <Run Text=" completed" />
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!--  Emails Card  -->
                    <Border
                        Margin="5"
                        Padding="15"
                        Background="#F3E5F5"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                FontSize="14"
                                Foreground="Gray"
                                Text="ðŸ“§ Emails" />
                            <TextBlock
                                FontSize="32"
                                FontWeight="Bold"
                                Text="{Binding TotalEmails}" />
                            <TextBlock>
                                <Run
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    Text="{Binding HighPriorityEmails}" />
                                <Run Text=" high priority" />
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!--  Reminders Card  -->
                    <Border
                        Margin="5"
                        Padding="15"
                        Background="#FFF3E0"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                FontSize="14"
                                Foreground="Gray"
                                Text="â° Reminders" />
                            <TextBlock
                                FontSize="32"
                                FontWeight="Bold"
                                Text="{Binding UpcomingReminders}" />
                            <TextBlock Text="upcoming (7 days)" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!--  Daily Briefing header + nicer refresh  -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <!--  NEW  -->
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Daily Briefing" />

                    <!--  Refresh  -->
                    <Button
                        Grid.Column="1"
                        Margin="0,0,8,0"
                        Padding="12,6"
                        Background="#F5F5F5"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Command="{Binding LoadBriefingCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="16">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                Text="âŸ³" />
                            <TextBlock FontWeight="SemiBold" Text="Refresh" />
                        </StackPanel>
                    </Button>

                    <!--  NEW: Speak  -->
                    <Button
                        Grid.Column="2"
                        Margin="0,0,8,0"
                        Padding="12,6"
                        Background="#F5F5F5"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Command="{Binding SpeakBriefingCommand}"
                        IsEnabled="{Binding CanSpeakBriefing}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="16">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                Text="ðŸ”Š" />
                            <TextBlock FontWeight="SemiBold" Text="Speak" />
                        </StackPanel>
                    </Button>

                    <!--  NEW: Stop  -->
                    <Button
                        Grid.Column="3"
                        Padding="12,6"
                        Background="#F5F5F5"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Command="{Binding StopSpeakingCommand}"
                        IsEnabled="{Binding CanStopSpeaking}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="16">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                Text="â¹" />
                            <TextBlock FontWeight="SemiBold" Text="Stop" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!--  Local time in dashboard  -->
                <TextBlock
                    Margin="0,0,0,12"
                    FontSize="11"
                    Foreground="Gray">
                    <Run Text="Generated: " />
                    <Run Text="{Binding BriefingGeneratedAtLocal, Mode=OneWay, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                </TextBlock>

                <!--  Important Emails  -->
                <TextBlock
                    Margin="0,0,0,6"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Important Emails (top 5)" />

                <ItemsControl ItemsSource="{Binding BriefingImportantEmails}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,4"
                                Padding="10"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="5">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">
                                        <Run Text="{Binding Subject}" />
                                        <Run Text="  " />
                                        <Run Foreground="Red" Text="{Binding PriorityScore, StringFormat='(prio {0})'}" />
                                    </TextBlock>

                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="{Binding From}" />

                                    <TextBlock FontSize="11" Foreground="Gray">
                                        <Run Text="Received: " />
                                        <Run Text="{Binding ReceivedUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                                    </TextBlock>

                                    <TextBlock Margin="0,4,0,0" FontSize="12">
                                        <Run FontWeight="Bold" Text="Category: " />
                                        <Run Text="{Binding Category}" />
                                    </TextBlock>

                                    <TextBlock FontSize="12">
                                        <Run FontWeight="Bold" Text="Action: " />
                                        <Run Text="{Binding SuggestedAction}" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Due Tasks (dynamic)  -->
                <TextBlock
                    Margin="0,16,0,6"
                    FontSize="14"
                    FontWeight="Bold">
                    <Run Text="Due Tasks â€“ next " />
                    <Run Text="{Binding TasksWindowText}" />
                </TextBlock>

                <ItemsControl ItemsSource="{Binding BriefingDueTasks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,4"
                                Padding="10"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="5">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                                    <TextBlock FontSize="11" Foreground="Gray">
                                        <Run Text="Due: " />
                                        <Run Text="{Binding DueUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                                    </TextBlock>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="{Binding Notes}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Upcoming Reminders (dynamic)  -->
                <TextBlock
                    Margin="0,16,0,6"
                    FontSize="14"
                    FontWeight="Bold">
                    <Run Text="Upcoming Reminders â€“ next " />
                    <Run Text="{Binding RemindersWindowText}" />
                </TextBlock>

                <ItemsControl ItemsSource="{Binding BriefingUpcomingReminders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,4"
                                Padding="10"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="5">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                                    <TextBlock FontSize="11" Foreground="Gray">
                                        <Run Text="At: " />
                                        <Run Text="{Binding FireAtUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Recent Emails  -->
                <TextBlock
                    Margin="0,20,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Recent Emails" />

                <ItemsControl ItemsSource="{Binding RecentItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,5"
                                Padding="10"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="5">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" Text="{Binding Subject}" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="{Binding From}" />
                                    <TextBlock FontSize="11" Foreground="Gray">
                                        <Run Text="Received: " />
                                        <Run Text="{Binding ReceivedUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
