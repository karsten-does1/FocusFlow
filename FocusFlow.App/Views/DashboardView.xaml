<UserControl
    x:Class="FocusFlow.App.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FocusFlow.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FocusFlow.App.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="Bold"
            Text="Dashboard" />

        <!--  Loading Indicator  -->
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Loading..."
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!--  Error Message  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,10"
            Foreground="Red"
            Text="{Binding ErrorMessage}"
            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}" />

        <!--  Dashboard Content  -->
        <ScrollViewer Grid.Row="1" Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <StackPanel>
                <!--  Statistics Cards  -->
                <UniformGrid Margin="0,0,0,20" Columns="3">
                    <!--  Tasks Card  -->
                    <Border
                        Margin="5"
                        Padding="15"
                        Background="#E3F2FD"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                FontSize="14"
                                Foreground="Gray"
                                Text="ðŸ“‹ Tasks" />
                            <TextBlock
                                FontSize="32"
                                FontWeight="Bold"
                                Text="{Binding TotalTasks}" />
                            <TextBlock>
                                <Run FontWeight="Bold" Text="{Binding ActiveTasks}" />
                                <Run Text=" active, " />
                                <Run FontWeight="Bold" Text="{Binding CompletedTasks}" />
                                <Run Text=" completed" />
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!--  Emails Card  -->
                    <Border
                        Margin="5"
                        Padding="15"
                        Background="#F3E5F5"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                FontSize="14"
                                Foreground="Gray"
                                Text="ðŸ“§ Emails" />
                            <TextBlock
                                FontSize="32"
                                FontWeight="Bold"
                                Text="{Binding TotalEmails}" />
                            <TextBlock>
                                <Run
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    Text="{Binding HighPriorityEmails}" />
                                <Run Text=" high priority" />
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!--  Reminders Card  -->
                    <Border
                        Margin="5"
                        Padding="15"
                        Background="#FFF3E0"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                FontSize="14"
                                Foreground="Gray"
                                Text="â° Reminders" />
                            <TextBlock
                                FontSize="32"
                                FontWeight="Bold"
                                Text="{Binding UpcomingReminders}" />
                            <TextBlock Text="upcoming (7 days)" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!--  Recent Items  -->
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Recent Emails" />

                <ItemsControl ItemsSource="{Binding RecentItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,5"
                                Padding="10"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="5">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" Text="{Binding Subject}" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="{Binding From}" />
                                    <TextBlock FontSize="11" Foreground="Gray">
                                        <Run Text="Received: " />
                                        <Run Text="{Binding ReceivedUtc, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>