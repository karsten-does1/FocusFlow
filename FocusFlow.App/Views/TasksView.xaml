<UserControl
    x:Class="FocusFlow.App.Views.TasksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FocusFlow.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FocusFlow.App.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Tasks" />
            <Button
                Margin="20,0,0,0"
                Padding="10,5"
                HorizontalAlignment="Left"
                Command="{Binding ShowNewTaskFormCommand}"
                Content="+ New Task" />
        </StackPanel>

        <!--  Filters  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <!--  All tasks  -->
            <Button
                Margin="0,0,10,0"
                Padding="10,5"
                Command="{Binding FilterTasksCommand}"
                CommandParameter="All"
                Content="All" />

            <!--  Only active (not done)  -->
            <Button
                Margin="0,0,10,0"
                Padding="10,5"
                Command="{Binding FilterTasksCommand}"
                CommandParameter="Active"
                Content="Active" />

            <!--  Only completed  -->
            <Button
                Padding="10,5"
                Command="{Binding FilterTasksCommand}"
                CommandParameter="Completed"
                Content="Completed" />
        </StackPanel>

        <!--  Error Message  -->
        <TextBlock
            Grid.Row="2"
            Margin="0,0,0,10"
            Foreground="Red"
            Text="{Binding ErrorMessage}"
            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}" />

        <!--  Loading Indicator  -->
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Loading..."
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!--  Tasks List  -->
        <ListBox
            Grid.Row="2"
            ItemsSource="{Binding Tasks}"
            SelectedItem="{Binding SelectedTask}"
            Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="0,5"
                        Padding="10"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Task Info  -->
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontWeight="Bold"
                                    Text="{Binding Title}"
                                    TextDecorations="{Binding IsDone, Converter={StaticResource BooleanToTextDecorationConverter}}" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    Foreground="Gray"
                                    Text="{Binding Notes}"
                                    TextWrapping="Wrap"
                                    Visibility="{Binding Notes, Converter={StaticResource NullToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    Foreground="DarkBlue"
                                    Text="{Binding DueUtc, StringFormat='Due: {0:dd/MM/yyyy HH:mm}'}"
                                    Visibility="{Binding DueUtc, Converter={StaticResource NullToVisibilityConverter}}" />
                            </StackPanel>

                            <!--  Actions  -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button
                                    Margin="5,0"
                                    Padding="10,5"
                                    Command="{Binding DataContext.ShowEditTaskFormCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Edit" />
                                <Button
                                    Margin="5,0"
                                    Padding="10,5"
                                    Background="LightCoral"
                                    Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Delete" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--  Task Form (Overlay)  -->
        <Border
            Grid.Row="2"
            Width="400"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="10"
            Visibility="{Binding IsTaskFormVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding IsEditing, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Edit Task|New Task'}" />

                <TextBlock Margin="0,0,0,5" Text="Title *" />
                <TextBox Margin="0,0,0,15" Text="{Binding TaskTitle, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Margin="0,0,0,5" Text="Notes" />
                <TextBox
                    Height="100"
                    Margin="0,0,0,15"
                    AcceptsReturn="True"
                    Text="{Binding TaskNotes, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />

                <TextBlock Margin="0,0,0,5" Text="Due Date" />
                <DatePicker Margin="0,0,0,15" SelectedDate="{Binding TaskDueDate}" />

                <CheckBox
                    Margin="0,0,0,15"
                    Content="Completed"
                    IsChecked="{Binding TaskIsDone}" />

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Margin="5,0"
                        Padding="15,5"
                        Command="{Binding CancelTaskFormCommand}"
                        Content="Cancel" />
                    <Button
                        Margin="5,0"
                        Padding="15,5"
                        Background="LightGreen"
                        Command="{Binding SaveTaskCommand}"
                        Content="Save" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>