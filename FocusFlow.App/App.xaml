<Application
    x:Class="FocusFlow.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FocusFlow.App.Converters">

    <Application.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <conv:NullToInverseVisibilityConverter x:Key="NullToInverseVisibilityConverter" />
        <conv:BooleanToTextDecorationConverter x:Key="BooleanToTextDecorationConverter" />
        <conv:BooleanToStringConverter x:Key="BooleanToStringConverter" />
        <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
        <conv:PriorityToColorConverter x:Key="PriorityToColorConverter" />
        <conv:NullToTitleConverter x:Key="NullToTitleConverter" />
    </Application.Resources>
</Application>
